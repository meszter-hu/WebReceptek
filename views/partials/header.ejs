<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>WebReceptek</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand" href="/">WebReceptek</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" href="/">Fooldal</a></li>
        <li class="nav-item"><a class="nav-link" href="/adatbazis">Receptek</a></li>
        <li class="nav-item"><a class="nav-link" href="/kapcsolat">Kapcsolat</a></li>
        <li class="nav-item"><a class="nav-link" href="/uzenetek">Uzenetek</a></li>
        <li class="nav-item"><a class="nav-link" href="/crud/receptek">CRUD</a></li>
        <% if (currentUser && currentUser.szerep === "admin") { %>
        <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
        <% } %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if (!currentUser) { %>
          <li class="nav-item"><a class="nav-link" href="/register">Regisztracio</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Bejelentkezes</a></li>
        <% } else { %>
          <li class="nav-item">
            <span class="navbar-text me-2"><%= currentUser.nev %> (<%= currentUser.szerep %>)</span>
          </li>
          <li class="nav-item"><a class="nav-link" href="/logout">Kijelentkezes</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger">
      <% error.forEach(function(e){ %>
        <div><%= e %></div>
      <% }) %>
    </div>
  <% } %>
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success">
      <% success.forEach(function(s){ %>
        <div><%= s %></div>
      <% }) %>
    </div>
  <% } %>
