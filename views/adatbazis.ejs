<%- include("partials/header") %>

<h2>Recept adatbazis</h2>
<p>Etel, kategoria, hozzavalo es hasznalt tablakkal keszitett lista.</p>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Etel</th>
        <th>Kategoria</th>
        <th>Hozzavalok</th>
      </tr>
    </thead>
    <tbody>
    <% receptek.forEach(function(r){ %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.etel %></td>
        <td><%= r.kategoria %></td>
        <td><%= r.hozzavalok || "" %></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>

<%- include("partials/footer") %>
